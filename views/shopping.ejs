<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shopping - FreshMarket</title>
    <style>
        * { margin:0; padding:0; box-sizing:border-box; }
        body {
            background: linear-gradient(135deg,#f5f7ff 0%,#eef6fb 100%);
            min-height: 100vh;
            font-family: 'Segoe UI', Roboto, Arial, sans-serif;
        }
        .nav { background:rgba(255,255,255,.95); padding:1rem 0; box-shadow:0 2px 10px rgba(0,0,0,.08); }
        .container { width:90%; max-width:1200px; margin:0 auto; }
        .nav-content { display:flex; justify-content:space-between; align-items:center; }
        .logo { font-size:1.4rem; font-weight:800; color:#667eea; }
        .nav-links { display:flex; gap:1rem; }
        .nav-links a { color:#444; text-decoration:none; padding:.5rem 1rem; border-radius:.5rem; transition:all .2s; }
        .nav-links a:hover { background:#667eea; color:#fff; }
        
        .hero { text-align:center; padding:2rem 1rem; }
        .hero h1 { color:#1a1a1a; font-size:2rem; margin-bottom:.5rem; }
        .hero p { color:#666; }
        
        .controls { display:flex; gap:1rem; margin:1rem 0 2rem; padding:1rem; background:#fff; border-radius:.8rem; box-shadow:0 4px 12px rgba(0,0,0,.05); }
        .search-input { flex:1; padding:.8rem 1rem; border:2px solid #eee; border-radius:.5rem; font-size:.95rem; }
        .search-input:focus { outline:none; border-color:#667eea; }
        .sort-select { padding:.8rem 1rem; border:2px solid #eee; border-radius:.5rem; cursor:pointer; }
        
        .products-grid { display:grid; grid-template-columns:repeat(auto-fill, minmax(280px, 1fr)); gap:1.5rem; padding:1rem; }
        .product-card {
            background:#fff;
            border-radius:1rem;
            padding:1.5rem;
            transition: all .3s;
            box-shadow:0 4px 12px rgba(0,0,0,.05);
        }
        .product-card:hover { transform:translateY(-5px); box-shadow:0 12px 24px rgba(0,0,0,.1); }
        .product-img { aspect-ratio:1; width:100%; object-fit:cover; border-radius:.5rem; margin-bottom:1rem; }
        .product-title { font-size:1.1rem; color:#1a1a1a; margin-bottom:.5rem; text-decoration:none; }
        .product-title:hover { color:#667eea; }
        .product-price { font-size:1.2rem; font-weight:600; color:#667eea; }
        .product-stock { color:#666; font-size:.9rem; margin:.5rem 0; }
        
        .btn { display:inline-flex; align-items:center; justify-content:center; padding:.8rem 1.5rem; border:none; border-radius:.5rem; font-weight:600; cursor:pointer; transition:all .2s; }
        .btn-primary { background:linear-gradient(135deg,#667eea,#764ba2); color:#fff; }
        .btn-primary:hover { transform:translateY(-2px); box-shadow:0 4px 12px rgba(102,126,234,.3); }
        
        .quantity-input { width:80px; padding:.8rem; border:2px solid #eee; border-radius:.5rem; margin-right:.5rem; }
    </style>
</head>
<body>
    <nav class="nav">
        <div class="container">
            <div class="nav-content">
                <div class="logo">ðŸ›’ FreshMarket</div>
                <div class="nav-links">
                    <a href="/shopping">Shop</a>
                    <a href="/cart">Cart</a>
                    <a href="/logout">Logout</a>
                </div>
            </div>
        </div>
    </nav>

    <div class="container">
        <div class="hero">
            <h1>Welcome, <%= user.username %></h1>
            <p>Browse our fresh selection of products</p>
        </div>
        
        <div class="controls">
            <input type="text" id="searchInput" class="search-input" placeholder="Search products...">
            <select id="sortSelect" class="sort-select">
                <option value="">Sort by</option>
                <option value="price-asc">Price: Low to High</option>
                <option value="price-desc">Price: High to Low</option>
            </select>
        </div>

        <div class="products-grid" id="productsGrid">
            <% products.forEach(function(product) { %>
                <div class="product-card" data-name="<%= product.productName.toLowerCase() %>" data-price="<%= product.price %>">
                    <div class="product-info">
                        <h3><a href="/product/<%= product.id %>" ><%= product.productName %></a></h3>
                        <img src = "images/<%= product.image %>" width="100%" class="img-fluid product-img">
                        <p class="product-price">Price: $<%= product.price.toFixed(2) %></p>
                        <p class="product-stock">Available: <%= product.quantity %> in stock</p>
                    </div>
                    <div class="button-group">
                        <form action="/add-to-cart/<%= product.id %>" method="POST">
                            <input type="number" name="quantity" value="1" min="1" class="quantity-input">
                            <button type="submit" class="btn btn-primary">Add to Cart</button>
                        </form>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>

    <script>
        // Search and sort functionality
        const productsGrid = document.getElementById('productsGrid');
        const searchInput = document.getElementById('searchInput');
        const sortSelect = document.getElementById('sortSelect');
        const products = Array.from(productsGrid.children);

        function updateDisplay() {
            const searchTerm = searchInput.value.toLowerCase();
            const sortValue = sortSelect.value;
            
            // Filter products
            const filtered = products.filter(card => {
                const name = card.dataset.name;
                return name.includes(searchTerm);
            });

            // Sort products
            if(sortValue) {
                filtered.sort((a, b) => {
                    const priceA = parseFloat(a.dataset.price);
                    const priceB = parseFloat(b.dataset.price);
                    return sortValue === 'price-asc' ? priceA - priceB : priceB - priceA;
                });
            }

            // Update display
            productsGrid.innerHTML = '';
            filtered.forEach(card => productsGrid.appendChild(card));
        }

        searchInput.addEventListener('input', updateDisplay);
        sortSelect.addEventListener('change', updateDisplay);
    </script>
</body>
</html>
